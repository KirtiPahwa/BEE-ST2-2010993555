<html>
  <head>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:weight@100;200;300;400;500;600;700;800&display=swap");
      body {
        font-family: "Poppins", sans-serif;
        font-weight: 300;
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
      }
      .container {
        height: fit-content;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .card {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        width: 70vw;
        border: none;
        border-radius: 15px;
        padding: 15px;
        background-color: #fff;
        position: relative;
        height: fit-content;
        margin-top: 4rem;
        margin-bottom: 4rem;
      }
      .upper {
        height: 120px;
      }
      .upper img {
        width: 100%;
        height: 100%;
        border-radius: 10px;
      }
      .user {
        position: relative;
      }
      .profile {
        position: absolute;
        top: -60px;
        left: 45%;
        height: 90px;
        width: 90px;
        border: 3px solid #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
      }
      .follow {
        border-radius: 15px;
        padding-left: 20px;
        padding-right: 20px;
        height: 35px;
      }
      .image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin: 20px;
      }
      .stats span {
        font-size: 18px;
      }
      .button {
        width: 15rem;
        padding: 20px;
        background-color: rgb(56, 198, 217);
        margin: 1rem;
        border-radius: 2rem;
        cursor: pointer;
        text-decoration: none;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: large;
      }

      .login__field {
        padding: 20px 0px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .login__icon {
        position: absolute;
        top: 30px;
        color: #7875b5;
      }
      .login__input {
        border: none;
        border-bottom: 2px solid #d1d1d4;
        background: none;
        padding: 10px;
        padding-left: 24px;
        font-weight: 700;
        width: 75%;
        transition: 0.2s;
      }
      input {
        border: none;
        border-bottom: 1px solid gray;
        width: 100%;
        padding: 10px 0px;
        margin: 0px 0px;
      }
      .login__input:active,
      .login__input:focus,
      .login__input:hover {
        outline: none;
        border-bottom-color: #d26438;
      }
    </style>
  </head>
  <body>
    <% if(locals.err_msg) { %>
    <div class="alert alert-danger" role="alert"><%= err_msg %></div>
    <% } %>

    <div class="container d-flex justify-content-center align-items-center">
      <div class="card">
        <div class="user text-center">
          <div class="profile">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSfmJO1vZOid-nPBHG4aMhenFmy5zW4qPg_-g&usqp=CAU"
              class="image"
              width="200px"
              height="200px"
            />
          </div>
        </div>
        <div class="mt-5 text-center">
          <div
            class="d-flex justify-content-between align-items-center mt-4 px-4"
          >
            <div class="stats">
              <p class="mb-0" style="font-size: 20px">
                <b>Username:</b> <%= result[0].username %>
              </p>
            </div>
            <div class="stats">
              <p class="mb-0" style="font-size: 20px">
                <b>Contact No:</b> <%= result[0].contact %>
              </p>
            </div>
            <div class="stats">
              <p class="mb-0" style="font-size: 20px">
                <b>Gender:</b> <%= result[0].gender %>
              </p>
            </div>
            <br />
            <hr />
            <div class="stats">
              <p class="mb-0" style="text-align: center; font-size: 20px">
                <b>Change your Password:</b>
              </p>
            </div>
            <form class="login" action="/change-pass-form" method="POST">
              <div class="login__field">
                <input
                  type="text"
                  name="oldpass"
                  id="oldpass"
                  class="login__input"
                  placeholder="Current Password"
                  required
                />
              </div>
              <div class="login__field">
                <input
                  type="text"
                  name="newpass"
                  id="newpass"
                  class="login__input"
                  placeholder="New Password"
                  required
                />
              </div>
              <div class="login__field">
                <input
                  type="text"
                  name="conpass"
                  id="conpass"
                  class="login__input"
                  placeholder="Confirm Password"
                  required
                />
              </div>
              <div
                class="stats"
                style="
                  display: flex;
                  align-items: center;
                  justify-content: center;
                "
              >
                <button class="button" type="submit">Change Pass</button>
              </div>
            </form>
            <div
              class="stats"
              style="
                display: flex;
                align-items: center;
                justify-content: center;
              "
            ></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
