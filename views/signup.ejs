<html>
  <head>
    <style>
      * {
        margin: 0;
        padding: 0;
      }
      .outer_container {
        width: 100%;
        display: flex;
        flex-direction: row;
        font-family: Arial, Helvetica, sans-serif;
      }
      aside {
        width: 50%;
      }
      .left_box {
        height: 675px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .credential_container {
        margin-top: -100px;
        height: 400px;
        width: 70%;
      }
      .heading_container {
        padding: 30px;
        text-align: center;
      }
      .heading_container h1 {
        padding: 18px;
      }
      .heading_container p {
        color: gray;
        font-size: 15px;
      }
      .log_with_google_container {
        height: auto;
        width: 100%;
        display: flex;
        justify-content: center;
      }
      .log_with_google_container button {
        height: 40px;
        width: 70%;
        background-color: transparent;
        border: 1px solid gray;
        border-radius: 5px;
        padding: 5px;
      }
      .google_icon {
        display: inline-block;
        margin-right: -12px;
      }
      .log_with_google_container p {
        display: inline-block;
        margin-left: 10px;
        color: gray;
      }
      .horizontal_line {
        display: flex;
        flex-direction: row;
        color: gray;
        width: 70%;
        margin: 30px auto;
      }
      .horizontal_line:before,
      .horizontal_line:after {
        content: "";
        flex: 1 1;
        border-bottom: 1px solid;
        margin: auto;
      }
      .horizontal_line:before {
        margin-right: 10px;
      }
      .horizontal_line:after {
        margin-left: 10px;
      }
      .inner_container {
        width: 70%;
        margin: auto;
      }
      input {
        border: none;
        border-bottom: 1px solid gray;
        width: 100%;
        padding: 10px 0px;
        margin: 15px 0px;
      }

      .gender {
        display: flex;
        font-size: 15px;
        color: gray;
      }
      label {
        font-size: 15px;
      }
      .gender div:nth-child(1) {
        margin-left: 70px;
      }
      .gender div {
        margin-top: -30px;
      }
      .remember {
        display: inline-block;
        margin-left: 7px;
        font-size: 13px;
      }
      .forgot_pass_container {
        width: 100%;
        margin: 5px 0px;
      }
      .forgot_pass_container span {
        float: right;
        text-decoration: none;
        color: black;
        font-size: 14px;
      }
      .forgot_pass_container span a {
        color: black;
        font-size: 14px;
      }
      .login_btn {
        height: 40px;
        width: 100%;
        border: none;
        background-color: black;
        color: white;
        margin: 25px 0px;
        border-radius: 5px;
      }
    </style>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  </head>
  <body>
    <% if(locals.err_msg) { %>
    <div class="alert alert-danger" role="alert"><%= err_msg %></div>
    <% } %>
    <div class="outer_container">
      <aside class="left_box">
        <div class="credential_container">
          <div class="heading_container">
            <h1>Create Your Account</h1>
            <p>Welcome! Please enter your details.</p>
          </div>
          <main class="inner_container">
            <form action="/signup-form" method="POST">
              <input type="text" name="name" placeholder="Full Name" required />

              <input
                type="text"
                name="username"
                placeholder="User Name"
                required
                minlength="6"
              />
              <input
                type="number"
                name="contact"
                placeholder="Contact Number"
                required
              />
              <label>Gender:</label>

              <div class="gender">
                <div class="g_male">
                  <input
                    class="gender_male"
                    type="radio"
                    name="gender"
                    value="male"
                    required
                  />
                  <label for="male">Male</label>
                </div>
                <div class="g_female">
                  <input
                    class="gender_female"
                    type="radio"
                    name="gender"
                    value="female"
                    required
                  />
                  <label for="female">Female</label>
                </div>
              </div>
              <input
                type="password"
                name="password"
                placeholder="Password"
                required
                minlength="6"
              />

              <div class="forgot_pass_container">
                <span>
                  Already have an account?<a href="/login"> Login!</a>
                </span>
              </div>
              <button class="login_btn" type="submit">Create</button>
            </form>
          </main>
        </div>
      </aside>
      <aside class="right_box">
        <lottie-player
          src="https://assets9.lottiefiles.com/packages/lf20_gjmecwii.json"
          background="transparent"
          speed="1"
          style="width: 700px; height: 600px"
          loop
          autoplay
        ></lottie-player>
      </aside>
    </div>
